[Unit]
Description=M2FS Slit Controller
Wants=shoeR.service
Wants=shoeB.service
After=shoeB.service
After=shoeR.service

[Install]
WantedBy=director.service

[Service]
Type=exec
ExecStart=/M2FS-Control/bin/slitController.py
WorkingDirectory=/M2FS-Control/
RestartSec=100ms
Restart=always
KillMode=control-group
KillSignal=SIGTERM
SendSIGKILL=yes