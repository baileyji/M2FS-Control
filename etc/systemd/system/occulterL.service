[Unit]
Description=IFU-M LSB Occulter
Wants=occulterL.device
After=occulterL.device

[Install]
WantedBy=director.service

[Service]
Type=simple
ExecStart=/M2FS-Control/bin/occulterAgent.py --IFU L
WorkingDirectory=/M2FS-Control/
RestartSec=100ms
Restart=always
KillMode=control-group
KillSignal=SIGTERM
SendSIGKILL=yes