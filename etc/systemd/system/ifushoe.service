[Unit]
Description=IFU-M Shoe Controller
After=ifushoe.device

[Install]
WantedBy=director.service
WantedBy=ifushoe.device


[Service]
Type=simple
ExecStart=/M2FS-Control/bin/ifushoeAgent.py
WorkingDirectory=/M2FS-Control/
RestartSec=100ms
Restart=always
KillMode=control-group
KillSignal=SIGTERM
SendSIGKILL=yes