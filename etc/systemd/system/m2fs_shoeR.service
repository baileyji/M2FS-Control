[Unit]
Description=M2FS Shoe R
Wants=shoeR.device
After=shoeR.device

[Install]
WantedBy=slitController.service

[Service]
Type=simple
ExecStart=/M2FS-Control/bin/shoeAgent.py --side R
WorkingDirectory=/M2FS-Control/
RestartSec=100ms
Restart=always
KillMode=control-group
KillSignal=SIGTERM
SendSIGKILL=yes