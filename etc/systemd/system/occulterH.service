[Unit]
Description=IFU-M HSB Occulter
Wants=occulterH.device
After=occulterH.device

[Install]
WantedBy=director.service

[Service]
Type=simple
ExecStart=/M2FS-Control/bin/occulterAgent.py --IFU H
WorkingDirectory=/M2FS-Control/
RestartSec=100ms
Restart=always
KillMode=control-group
KillSignal=SIGTERM
SendSIGKILL=yes